NEXT_PUBLIC_SUPABASE_URL="https://YOUR_PROJECT_REF.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="YOUR_ANON_KEY"

# Optional server-only keys (do not expose in the browser).
SUPABASE_SERVICE_ROLE_KEY="YOUR_SERVICE_ROLE_KEY"

# Gemini (Google AI Studio)
# Gemini is optional. To avoid auth headaches, the app runs OpenAI-only by default.
# Enable Gemini only when you have a working AI Studio key for `generativelanguage.googleapis.com`.
ENABLE_GEMINI="0"
GOOGLE_API_KEY="YOUR_GOOGLE_API_KEY"
GEMINI_TEXT_MODEL="gemini-2.5-flash"
GEMINI_IMAGE_MODEL="imagen-3.0-generate-002"
GEMINI_TRANSCRIBE_MODEL="gemini-2.5-flash"
GEMINI_SCORE_MODEL="gemini-2.5-pro"
GEMINI_REVIEW_MODEL="gemini-2.5-flash"

# OpenAI (recommended for assessment generation + transcription + scoring)
OPENAI_API_KEY="YOUR_OPENAI_API_KEY"
OPENAI_TEXT_MODEL="gpt-5-mini-2025-08-07"
OPENAI_SCORE_MODEL="gpt-5-mini-2025-08-07"
OPENAI_IMAGE_MODEL="gpt-image-1"
OPENAI_TRANSCRIBE_MODEL="whisper-1"

# Storage buckets
SUPABASE_ASSET_BUCKET="assessment-assets"
SUPABASE_RECORDINGS_BUCKET="student-recordings"

# Optional: protect cron endpoint (Authorization: Bearer <CRON_SECRET>)
CRON_SECRET="CHANGE_ME"
